<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF8E1">
    <TextView
        android:id="@+id/tvBonjour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="#090f09"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Titre -->
    <TextView
        android:id="@+id/tvCategoriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catégories de Livres"
        android:textSize="26sp"
        android:textColor="#3E2723"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <!-- RelativeLayout imbriqué pour regrouper tous les boutons -->
    <RelativeLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCategoriesTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:padding="40dp"
        android:elevation="8dp">

        <!-- Bouton Drama -->
        <Button
            android:id="@+id/btnDrama"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:text="Drama"
            android:backgroundTint="#FF7043"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <!-- Bouton Comics -->
        <Button
            android:id="@+id/btnComics"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Comics"
            android:backgroundTint="#26C6DA"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_below="@id/btnDrama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <!-- Bouton Fantasy -->
        <Button
            android:id="@+id/btnFantasy"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Fantasy"
            android:backgroundTint="#66BB6A"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_below="@id/btnComics"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <!-- Bouton Science -->
        <Button
            android:id="@+id/btnScience"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Science"
            android:backgroundTint="#FFCA28"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_below="@id/btnFantasy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>
    <!-- Bouton retour -->
    <Button
        android:id="@+id/btnretour"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Deconnecter"
        android:backgroundTint="#FF7043"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
